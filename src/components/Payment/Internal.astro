---
import ByInstallment from '@/components/Payment/ByInstallment.astro';
import ByTotal from '@/components/Payment/ByTotal.astro';

import Event from '@/models/Event';
import ByQuote from './ByQuote.astro';

type Props = {
  event: Event;
};

const { event }: Props = Astro.props;
---
{ event.getIsBuyable()
  ? (
    <ByInstallment event={event} style="primary" />
    <ByTotal event={event} style="secondary" />
  )
  : (
    <ByQuote {event} />
  )
}

