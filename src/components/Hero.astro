---
import { CollectionEntry } from 'astro:content';
import AboutUs from './Hero/AboutUs.astro';
import SocialMediaIconsList from './Hero/SocialMediaIconsList.astro';
import Reseller from '@/models/Reseller';

type Props = {
  reseller?: Reseller;
};

const { reseller }: Props = Astro.props;
---

<AboutUs
  headingColor={reseller ? `heading-${reseller.getId()}` : 'text-primary-600'}
  reseller={reseller}
/>
{!reseller && <SocialMediaIconsList />}
