---
import '@/styles/global.css';
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

		<link rel="canonical" href="https://acuotas.app/" />

		<meta
			name="description"
			content="Reserva lo que se te dé la gana. #PágaloAcuotas sin líos, sin estrés, sin préstamos y con ayuda real por WhatsApp."
		/>
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://acuotas.app/" />
		<meta property="og:title" content="AcuotasApp" />
		<meta
			property="og:description"
			content="Reserva lo que se te dé la gana. #PágaloAcuotas sin líos, sin estrés, sin préstamos y con ayuda real por WhatsApp."
		/>
		<meta property="og:image" content="https://acuotas.app/logo-og.png" />
		<meta property="og:image:secure_url" content="https://acuotas.app/logo-og.png" />
		<meta property="og:image:width" content="1080" />
		<meta property="og:image:height" content="1080" />
		<meta name="generator" content={Astro.generator} />

		<link rel="sitemap" href="/sitemap-index.xml" />

		<title>AcuotasApp</title>
	</head>
	<body class="bg-gray-50 min-h-svh">
		<div
			class="h-full pt-24 pb-20 flex flex-col gap-4 bg-primary-50 w-full max-w-xl overflow-y-auto
			sm:mx-auto sm:rounded-3xl sm:shadow-lg sm:border sm:border-primary-200 sm:mt-4 sm:mb-24 sm:pb-4"
		>
			<slot />
		</div>
		<script is:inline src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js">
		</script>
	</body>
</html>
